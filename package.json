{
  "name": "todo-worker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "wrangler dev",
    "check": "npm run lint && npm test",
    "test": "mocha --recursive --exit",
    "coverage": "npx c8 --reporter=html --reporter=text mocha --recursive --exit",
    "prepare": "husky",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "format": "prettier --write .",
    "knip": "knip"
  },
  "dependencies": {
    "itty-router": "^2.5.3",
    "joi": "^18.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "chai": "^4.3.7",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "knip": "^5.69.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.6.2",
    "sinon": "^15.2.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js",
      "index.js",
      "db.js"
    ],
    "exclude": [
      "test/**"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "report-dir": "./coverage",
    "check-coverage": false,
    "instrument": true,
    "sourceMap": false
  }
}
