{
  "name": "todo-worker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "wrangler dev",
    "test": "mocha --recursive --exit",
  "coverage": "npx c8 --reporter=html --reporter=text mocha --recursive --exit"
  },
  "dependencies": {
    "itty-router": "^2.5.3",
    "joi": "^18.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "cross-env": "^7.0.3"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js",
      "index.js",
      "db.js"
    ],
    "exclude": [
      "test/**"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "report-dir": "./coverage",
    "check-coverage": false,
    "instrument": true,
    "sourceMap": false
  }
}
